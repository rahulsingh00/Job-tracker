<%= error_messages_for :user, :header_message => "Please Try Again!", :message => "We had some problems in the registration process." %>

<div class="middlebox">
  <h1>Register</h1>
   
  <% form_for @user, :url => account_path do |f| %>
    <%= render :partial => "form", :object => f %>
    <ul class="displaylist">
      <li>
        <span></span>
        <%= f.submit "Register" %>&nbsp;<div class="actionlink"><%= link_to 'Cancel', login_path %></div>
      </li>
    </ul>
  <% end %>
</div>

